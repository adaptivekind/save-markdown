{
  "manifest_version": 3,
  "name": "Markdown Capture",
  "version": "0.0.1",
  "description": "Select HTML elements and save them as markdown to a configured directory",
  "permissions": ["activeTab", "storage", "downloads", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Markdown Capture"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
