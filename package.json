{
  "name": "save-markdown",
  "version": "0.0.1",
  "type": "module",
  "description": "Chrome extension to save HTML elements as markdown",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "clean": "rm -rf dist",
    "eslint": "eslint src --ext .ts",
    "eslint:fix": "eslint --fix src --ext .ts",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:wait-after": "WAIT_AFTER_TEST=true playwright test --headed",
    "test:cucumber": "cucumber-js",
    "test:cucumber:headed": "HEADED=true cucumber-js",
    "test:cucumber:report": "cucumber-js --profile report && echo 'Report generated at: reports/cucumber_report.html'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@cucumber/cucumber": "^12.1.0",
    "@playwright/test": "^1.54.1",
    "@types/chrome": "^0.0.268",
    "@types/cucumber": "^6.0.1",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "vite-plugin-zip-pack": "^1.2.4"
  },
  "private": true
}
